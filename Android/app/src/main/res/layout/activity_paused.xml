<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_trans"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    tools:context="a00959419.comp3717.bcit.ca.android.ScreenMain">

    <TextView
        android:id="@+id/titlePaused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="PAUSED"
        android:textAlignment="textStart"
        android:textSize="80sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonBack"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonBack"
        android:background="@drawable/button_settings"
        android:onClick="buttonSettingsClick" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSettings"
        android:layout_alignEnd="@+id/titlePaused"
        android:layout_alignRight="@+id/titlePaused"
        android:layout_marginBottom="26dp"
        android:background="@drawable/button_resume"
        android:onClick="buttonBackClick" />

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titlePaused"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/titlePaused"
        android:background="@drawable/button_home_test"
        android:onClick="buttonHomeClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonBack"
        android:layout_alignBottom="@+id/buttonBack"
        android:layout_alignLeft="@+id/titlePaused"
        android:layout_alignStart="@+id/titlePaused"
        android:background="@drawable/button_back"
        android:onClick="buttonBackClick" />
</RelativeLayout>
