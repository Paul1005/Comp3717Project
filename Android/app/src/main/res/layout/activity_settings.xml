<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_background"
    android:screenOrientation="landscape">

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_back"
        android:onClick="buttonBackClick" />

    <Switch
        android:id="@+id/switchMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMasterVol"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/textMusic"
        android:layout_toRightOf="@+id/textMusic"
        android:splitTrack="false"
        android:text="MUTE"
        android:onClick="onMute"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/titleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="SETTINGS"
        android:textAlignment="textStart"
        android:textColor="#000"
        android:textSize="65sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textSFX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/iconAudio"
        android:layout_alignBottom="@+id/iconAudio"
        android:layout_alignLeft="@+id/textMasterVol"
        android:layout_alignStart="@+id/textMasterVol"
        android:text="SFX"
        android:textColor="#f000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/iconAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textMusic"
        android:layout_toEndOf="@+id/switchMute"
        android:layout_toRightOf="@+id/switchMute"
        android:background="@drawable/audio_smaller"
        android:text="Button" />

    <TextView
        android:id="@+id/textMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSFX"
        android:layout_alignStart="@+id/textSFX"
        android:layout_below="@+id/titleSettings"
        android:layout_marginTop="52dp"
        android:text="Music"
        android:textColor="#000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textMasterVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iconAudio"
        android:layout_toEndOf="@+id/buttonBack"
        android:layout_toRightOf="@+id/buttonBack"
        android:text="Master Volume"
        android:textColor="#000"
        android:textSize="24sp" />

</RelativeLayout>
