<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_background"
    android:screenOrientation="landscape">

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_back"
        android:onClick="buttonBackClick" />

    <TextView
        android:id="@+id/titleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="SETTINGS"
        android:textAlignment="textStart"
        android:textColor="#000"
        android:textSize="65sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSFX"
        android:layout_alignStart="@+id/textSFX"
        android:layout_below="@+id/titleSettings"
        android:layout_marginTop="52dp"
        android:text="Music"
        android:textColor="#000"
        android:textSize="24sp" />

    <Switch
        android:id="@+id/switchMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:splitTrack="false"
        android:text="MUTE"
        android:onClick="onMute"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="normal|bold"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textMusic"
        android:layout_toEndOf="@+id/textMusic" />

    <TextView
        android:id="@+id/textMasterVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master Volume"
        android:textColor="#000"
        android:textSize="24sp"
        android:layout_above="@+id/switchMute"
        android:layout_toRightOf="@+id/buttonBack"
        android:layout_toEndOf="@+id/buttonBack"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textSFX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SFX"
        android:textColor="#f000"
        android:textSize="24sp"
        android:layout_below="@+id/textMusic"
        android:layout_alignLeft="@+id/textMasterVol"
        android:layout_alignStart="@+id/textMasterVol"
        android:layout_marginTop="19dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:id="@+id/seekBar1"
        android:layout_alignTop="@+id/textMusic"
        android:layout_toRightOf="@+id/switchMute"
        android:max="5"
        android:progress="@android:integer/config_mediumAnimTime"
        style="@style/AppTheme"
        android:colorAccent = "@color/colorAccent"
        android:layout_alignRight="@+id/titleSettings"
        android:layout_alignEnd="@+id/titleSettings" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:layout_alignBottom="@+id/textSFX"
        android:layout_alignLeft="@+id/seekBar1"
        android:layout_alignStart="@+id/seekBar1"
        android:max="5"
        android:progress="@android:integer/config_mediumAnimTime"
        android:layout_alignRight="@+id/seekBar1"
        android:layout_alignEnd="@+id/seekBar1" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar3"
        android:layout_alignBottom="@+id/textMasterVol"
        android:layout_alignLeft="@+id/seekBar2"
        android:layout_alignStart="@+id/seekBar2"
        android:max="5"
        android:progress="@android:integer/config_mediumAnimTime"
        android:layout_alignRight="@+id/seekBar2"
        android:layout_alignEnd="@+id/seekBar2" />

</RelativeLayout>
